<Page x:Class="Memory_Project.FinishedView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinishedView">

    <StackPanel x:Name="mainPanel" Orientation="Horizontal">
        <StackPanel.Background>
            <ImageBrush x:Name="BackgroundImg" Stretch="Fill"/>
        </StackPanel.Background>

        <Grid HorizontalAlignment="Center" Width="{Binding ElementName=mainPanel, Path=ActualWidth}">
            <Border BorderBrush="White" BorderThickness="1" Margin="0, 20, 0, 20" Width="500">
                <StackPanel HorizontalAlignment="Center" Width="500" Background="#66000000">
                    <Label FontSize="30" HorizontalAlignment="Center" Margin="10, 10, 10, 0" Background="#00000000" BorderBrush="#00000000" Foreground="White">
                        <TextBlock TextWrapping="Wrap">
                            <!--<TextBlock.TextDecorations>
                                <TextDecoration Location="Underline" PenOffset="8" PenOffsetUnit="Pixel"/>
                            </TextBlock.TextDecorations>-->
                            Congratulations player, you've finished the game with a 1000 pts!
                        </TextBlock>
                    </Label>
                    
                    
                    
                </StackPanel>
            </Border>
        </Grid>
        
    </StackPanel>
</Page>
