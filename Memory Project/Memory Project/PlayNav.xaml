<Page x:Class="Memory_Project.PlayNav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayNav">

    <Grid Background="White">
        <Image Source="Images/NHLStenden/MenuBackground.png" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
        <ComboBox FontSize="20" HorizontalAlignment="Center" x:Name="comboHeight" Margin="280,110,0,0" VerticalAlignment="Top" Width="58" Height="48">
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="3" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="4" HorizontalAlignment="Left" Width="99.2" IsSelected="True"/>
            <ComboBoxItem Content="5" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="6" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="7" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="8" HorizontalAlignment="Left" Width="99.2"/>
        </ComboBox>
        <ComboBox FontSize="20" HorizontalAlignment="Center" x:Name="comboWidth" Margin="586,110,154,0" VerticalAlignment="Top" Width="60" Height="48">
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="3" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="4" HorizontalAlignment="Left" Width="99.2" IsSelected="True"/>
            <ComboBoxItem Content="5" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="6" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="7" HorizontalAlignment="Left" Width="99.2"/>
            <ComboBoxItem Content="8" HorizontalAlignment="Left" Width="99.2"/>
        </ComboBox>
        <Button Content="New Game" Click="new_click" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="182" Height="63"/>
        <Button Content="Load Game" HorizontalAlignment="Center" Margin="0,198,0,0" VerticalAlignment="Top" Width="182" Height="63"/>
        <Button Content="Back" Click="back_click" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" Width="182" Height="62"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="512,87,231,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Height="23" Width="57"/>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Margin="586,87,154,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Height="23" Width="60" RenderTransformOrigin="0.116,1.259"/>
        <Label Content="GAME SELECT&#xD;&#xA;" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="43" Width="182"/>
        <Canvas HorizontalAlignment="Left" Height="100" Margin="664,178,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>